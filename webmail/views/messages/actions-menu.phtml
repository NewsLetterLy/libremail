<!-- Contextual menu for selected messages -->
<div id="actions-menu" class="actions menu">
    <div class="dropdown inline-blocked control">
        <a href="#" class="icon button" data-tooltip="Select">
            <i class="fa fa-minus-square-o"></i>
            <i class="fa fa-caret-down"></i>
        </a>
        <ul>
            <li>
                <input type="submit" name="select" value="all" />
            </li>
            <li>
                <input type="submit" name="select" value="none" />
            </li>
            <li>
                <input type="submit" name="select" value="read" />
            </li>
            <li>
                <input type="submit" name="select" value="unread" />
            </li>
            <li>
                <input type="submit" name="select" value="flagged" />
            </li>
            <li>
                <input type="submit" name="select" value="unflagged" />
            </li>
        </ul>
    </div>
    <button name="action" value="archive" class="icon button control" data-tooltip="Archive">
        <i class="fa fa-archive"></i>
    </button>
    <button name="action" value="delete" class="icon button control" data-tooltip="Delete">
        <i class="fa fa-trash-o"></i>
    </button>
    <button name="action" value="mark_read" class="icon button control">
        <span class="normal">Mark as read</span>
    </button>
    <a href="#move-messages" class="icon button control" data-tooltip="Move to">
        <i class="fa fa-folder-o"></i>
        <i class="fa fa-plus"></i>
    </a>
    <a href="#apply-labels" class="icon button control" data-tooltip="Labels">
        <i class="fa fa-tag"></i>
        <i class="fa fa-plus"></i>
    </a>
</div><!-- /actions menu -->